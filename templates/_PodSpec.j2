{#  ## activeDeadlineSeconds (integer) #}
{% if PodSpec.activeDeadlineSeconds is defined %}
activeDeadlineSeconds: "{{ PodSpec.activeDeadlineSeconds | default('') }}"
{% endif -%}

{#   ## affinity: (Affinity) #}
{% if PodSpec.affinity is defined %}
affinity:
{%   filter indent(width=2, first=true) %}
{%     set Affinity = PodSpec.affinity %}
{%     include '_Affinity.j2' %}
{%   endfilter %}
{% endif -%}

{#   ## automountServiceAccountToken: (boolean) #}
{% if PodSpec.automountServiceAccountToken is defined %}
automountServiceAccountToken: "{{ PodSpec.automountServiceAccountToken | default('') }}"
{% endif -%}

{#   ## containers: (Container [array]) #}
{% if PodSpec.containers is defined %}
containers:
{%   for container in PodSpec.containers | default([], true) %}
{%     filter indent(width=4, first=false) %}
  - {%   include '_Container.j2' %}
{%     endfilter %}
{%   endfor %}
{% endif -%}

