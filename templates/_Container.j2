{% if Container.name is defined %}
name: {{ Container.name | default('') }}
{% endif -%}

{% if Container.image is defined %}
image: {{ Container.image | default('') }}
{% endif -%}

{% if Container.imagePullPolicy is defined %}
imagePullPolicy: {{ Container.imagePullPolicy | default('') }}
{% endif -%}

{#  ## lifecycle: (Lifecycle) #}
{% if Container.lifecycle is defined %}
lifecycle:
{%   for Lifecycle in Container.lifecycle | default([], true) %}
{%   include '_Lifecycle.j2' %}
{%   endfor %}
{% endif -%}

{#  ## livenessProbe: (Probe) #}
{% if Container.livenessProbe is defined %}
livenessProbe:
{%   for Probe in Container.livenessProbe | default([], true) %}
{%   include '_Probe.j2' %}
{%   endfor %}
{% endif -%}

{#  ## ports: (Probe) #}
{% if Container.ports is defined %}
ports:
{%   for ContainerPort in Container.ports | default([], true) %}
{%   include '_ContainerPort.j2' %}
{%   endfor %}
{% endif -%}

{#  ## args: (string [array]) #}
{% if Container.args is defined %}
args:
{%   for arg in Container.args | default([], true) %}
- "{{ arg | default('') }}"
{%   endfor %}
{% endif -%}

{#  ## command: (string [array]) #}
{% if Container.command is defined %}
command:
{%   for cmd in Container.command | default([], true) %}
- "{{ cmd | default('') }}"
{%   endfor %}
{% endif -%}

{% if Container.workingDir is defined %}
        workingDir: "{{ Container.workingDir | default('') }}"
{% endif -%}

{#  ## env: (EnvVar [array]) #}
{% if Container.env is defined %}
env:
{%   for EnvVar in Container.env | default([], true) %}
{%     filter indent(width=4, first=false) %}
  - {%   include '_EnvVar.j2' %}
{%     endfilter %}
{%   endfor %}
{% endif -%}

{#  ## envFrom: (EnvFromSource) #}
{% if Container.envFrom is defined %}
envFrom:
{%   for EnvFromSource in Container.envFrom | default([], true) %}
{%   include '_EnvFromSource.j2' %}
{%   endfor %}
{% endif %}